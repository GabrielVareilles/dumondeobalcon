<!-- WRAPPER -->
<div class="wrapper">

  <!-- BANNER -->
  <%= render 'shared/banner' %>
  <!-- END banner -->

  <!-- HOW IT WORKS -->
  <section id="about" class="p-t-40 p-b-40">
		<div class="container">
			<div class="row">
				<div class="col-sm-8 col-sm-offset-2">
					<div class="text-center m-t-40">
						<h1>Comment ça marche?</h1>
					</div>
				</div>
			</div>

			<div class="row multi-columns-row">

				<div class="col-sm-4 col-md-4 col-lg-4">
					<div class="box-icon text-center">
						<div class="icon-box-icon">
							<i class="fa fa-pencil" aria-hidden="true"></i>
						</div>
						<h4>Créer</h4>
						<p style = "padding: 0px 60px 0px 60px;"> Créez votre balcon en indiquant sa localisation, son orientation et ses spécificités techniques. </p>
					</div>
				</div>

				<div class="col-sm-4 col-md-4 col-lg-4">
					<div class="box-icon text-center">
						<div class="icon-box-icon">
							<i class="fa fa-hand-pointer-o" aria-hidden="true"></i>
						</div>
						<h4>Sélectionner</h4>
						<p style = "padding: 0px 60px 0px 60px;"> Sélectionnez les produits les plus adaptés à vos besoins, et construisez le balcon qui vous ressemble ! </p>
					</div>
				</div>

				<div class="col-sm-4 col-md-4 col-lg-4">
					<div class="box-icon text-center">
						<div class="icon-box-icon">
							<i class="fa fa-pagelines" aria-hidden="true"></i>
						</div>
						<h4>Profitez</h4>
						<p style = "padding: 0px 60px 0px 60px;">Choisissez un ou plusieurs services, recevez vos produits, et profitez immédiatement de votre balcon.</p>
					</div>
				</div>
        <hr>
			</div><!-- .row -->
		</div>
	</section>
  <!-- END HOW IT WORKS -->

  <!-- QUOTE -->
  <section class="module bg-brand-alfa-20 color-white parallax" data-background="assets/quote.jpg">
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <h1 class="text-center"> Flower your balcony, flower your life  </h1>
          <h2 class="text-center"> - Austin Power- </h2>
        </div>
      </div>
    </div><!-- .row -->
  </section>
  <!-- END QUOTE -->

  <!-- PORTFOLIO -->
	<section class="p-t-40 p-b-40 p-b-0">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text-center">
          <h1 class="p-t-40">Partagez</h1>
          <p class="lead m-b-40">Et rejoignez la première communauté de passionnés du balcon.</p>
          <%= link_to "Plus d'inspirations ici", inspiration_path, class: "btn btn-base btn-lg"  %>
        </div>
      </div><!-- .row -->
    </div>
  </section>

  <section class="bg-white-dark p-t-10 p-b-40 p-b-0">
		<!-- WORKS WRAPPER -->
		<div class="works-grid-wrapper">
      <!-- PORTFOLIO FILTERS -->
			<div class="row">
				<div class="col-sm-12">
					<ul id="filters" class="filters p-b-10 p-t-10">
						<li class="p-b-5"><a href="#" class="current" data-filter="*">Tous</a></li>
            <li class="p-b-5"><a href="#" data-filter=".small">Petit</a></li>
						<li class="p-b-5"><a href="#" data-filter=".medium">Moyen</a></li>
						<li class="p-b-5"><a href="#" data-filter=".large">Grand</a></li>
					</ul>
				</div>
			</div>
			<!-- END PORTFOLIO FILTERS -->

      <div class="row">

        <div class="col-sm-8">
      		<!-- WORKS GRID -->
  				<div id="works-grid" class="works-grid works-grid-3">
            <!-- PORTFOLIO ITEM -->
            <% Balcony.first(9).each do |balcony| %>
  					<article class="work-item <%= balcony.model %>" style="padding: 10px 0px 0px 10px;">
  						<div class="work-wrapper">
                <%= cl_image_tag balcony.photo, height: 400, width: 720, crop: :fill %>
                <div class="work-overlay">
                  <div class="work-caption">
                    <h6 class="work-title"> <%= balcony.name %> </h6>
                    <span class="work-category"> <%= balcony.model %> </span>
                  </div>
                  <%= link_to "", public_balcony_path(balcony.id), class: "work-link" %>
                </div>
  						</div>
  					</article>
            <% end %>
  					<!-- END PORTFOLIO ITEM -->
  				</div>
  				<!-- END WORKS GRID -->
  			</div>

        <div class="col-sm-4">
          <div class="maps-container maps-container-2 m-b-10" style="padding: 10px 10px 0px 0px;" >
            <!-- ADD YOUR ADDRESS HERE -->
            <% toto = [] %>
            <% tato = '' %>
            <% Balcony.first(9).each do |balcony|%>
              <% toto << [balcony.latitude, balcony.longitude] %>
              <% tato = toto.to_s[1..-2] %>
            <% end %>
            <div id="map" data-addresses="<%= tato %>" data-info="[Pimped balcony]" data-icon="assets/map-icon.png" data-zoom="5">
            </div>
            <!-- <div id="map" data-addresses= "[48.859822, 2.352647],[47.394930, 0.683666]" data-info="[Lorem ipsum dolor sit amet.],[Lorem ipsum dolor sit amet.]" data-icon="assets/map-icon.png" data-zoom="5"> -->
          </div>
        </div>
      </div>
		<!-- END WORKS WRAPPER -->
    </div>
	</section>
	<!-- END PORTFOLIO -->

  <!-- PRODUCT -->
  <section class="p-t-40 p-b-40 p-b-0">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text-center">
          <h1 class="p-t-40">Des produits adaptés à votre balcon</h1>
          <p class="lead m-b-40"> Oh c'est super !   </p>
        <%= link_to "Voir le catalogue complet", items_path, class: "btn btn-base btn-lg"  %>
        </div>
      </div><!-- .row -->
    </div>
  </section>

  <!-- IMAGE CAROUSEL -->
   <section class="divider-bottom">
     <div class="container">
       <div class="row">
         <div class="col-sm-12">
           <!-- START CARROUSSEL-->
           <div class="box-carousel" data-carousel-options='{"items":"5", "navigation": true}'>
             <% Item.all.shuffle.each do |pot| %>
               <div class="item">
                 <%= image_tag pot.attributes['photo_url']%>
                 <p class="m-t-10 text-center"><%= pot.name %></p>
               </div>
             <% end %>
           </div>
           <!-- END CAROUSEL-->
         </div>
       </div>
     </div>
   </section>
   <!-- END IMAGE CAROUSEL -->

   <!-- NEWSLETTER -->
  <section class="m-t-60 bg-white-dark">
    <div class="container" >
      <div class="row">
         <div class="col-sm-8 col-sm-offset-2 p-t-40 m-b-60 text-center">
           <h1>Inscrivez vous à notre newsletter</h1>
           <h3 class="m-b-40"> Et recevez régulièrement des nouvelles inspirations pour améliorer votre baclon</h3>
           <form class="row">
             <div class="col-sm-8 col-sm-offset-2">
               <div class="input-group">
                 <input type="email" class="form-control form-circle input-lg" placeholder="E-mail">
                 <span class="input-group-btn">
                   <button type="submit" class="btn btn-lg btn-circle btn-base">S'inscrire'</button>
                 </span>
               </div>
             </div>
           </form>
         </div>
       </div>
     </div>
   </section>
   <!-- END NEWSLETTER -->
</div>
